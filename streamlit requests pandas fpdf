secondaryBackgroundColor = "#F6F8FA" # l√©ger gris pour les conteneurs
textColor = "#111517"                # texte sombre
font = "sans serif"


# --- Config de la page ---
st.set_page_config(
    page_title="Fiche de r√©ception",
    page_icon="üìã",
    layout="wide",
    initial_sidebar_state="collapsed"
)

# CSS additionnel pour ‚Äúcards‚Äù et espacement
st.markdown(
    """
    <style>
      .card {
        background-color: white;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
